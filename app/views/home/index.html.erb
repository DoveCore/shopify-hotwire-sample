<%= polaris_page(title: "Home") do %>
  <%= polaris_card(title: "Button sample") do %>
    <%= polaris_button(url: products_path) { "Products" } %>
  <% end %>

  <%= polaris_card(title: "Form sample") do %>
    <%= form_tag messages_path do %>
      <%= polaris_form_layout do |form_layout| %>
        <% form_layout.item do %>
          <%= polaris_text_field(name: :message, label: "Flash message") %>
        <% end %>
        <% form_layout.item do %>
          <%= polaris_button(primary: true, submit: true) { "Send" } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= polaris_card(title: "Fullpage redirect") do %>
    <%= polaris_button(url: redirect_path) { "Shopify.dev" } %>
  <% end %>

  <%= polaris_card(title: "Fullpage redirect (frame)") do %>
    <%= turbo_frame_tag :redirect, target: "_top" do %>
      <%= polaris_button(url: redirect_path) { "Shopify.dev" } %>
    <% end %>
  <% end %>

  <%= polaris_card(title: "Fullpage redirect (form)") do %>
    <%= form_with url: redirect_path, method: :get do %>
      <%= polaris_button(submit: true) { "Submit" } %>
    <% end %>
  <% end %>
<% end %>
